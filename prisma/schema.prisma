generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  uuid        String    @id
  nickname    String
  role        String
  openid      String    @unique
  session_key String
  create_time  DateTime
  article     article[]
}

model category {
  uuid        String    @id
  title       String
  description String
  article     article[]
}

model article {
  uuid       String   @id
  title      String
  content    String   @db.Text
  create_time DateTime
  category   category @relation(fields: [category_id], references: [uuid])
  category_id String   @unique
  user       user     @relation(fields: [user_id], references: [uuid])
  user_id     String   @unique
}
